<p id="notice"><%= notice %></p>

<h1>Focal Areas</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diseases.each do |disease| %>
      <tr>
        <td><%= disease.name %></td>
        <td><%= link_to 'Edit', edit_admin_disease_path(disease) %> | <%= link_to 'Destroy', "diseases/#{disease.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Focal Area', new_admin_disease_path, class: 'btn btn-primary' %>
