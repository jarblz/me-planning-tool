<div class="container">
  <h2>Edit Global Indicators</h2>
  <hr>
  <%= form_for @global_indicators, url: save_global_indicators_path(@global_indicators.id), html: { method: 'get', class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :primary_indicator_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :primary_indicator_name, class: 'form-control', required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :secondary_indicator_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= f.text_field :secondary_indicator_name, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="form-group form-group-bottom">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Submit", class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

</div>
