<div class="container">
  <h1>Project List</h1>

  <table class='table table-striped'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Project Lead</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td> <%= project.name %></td>
          <td> <%= project.lead %></td>
          <td> <%= project.funding_start %></td>
          <td> <%= project.funding_end %></td>
          <td>
            <%= link_to 'Edit', edit_admin_project_path(project), class: 'btn btn-primary btn-sm' %>  <%= link_to 'Destroy', "projects/#{project.id}", class: 'btn btn-primary btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %> <%= link_to 'Add Indicators', admin_project_indicators_path(project), class: 'btn btn-primary btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Project', new_admin_project_path, class: 'btn btn-primary' %>
</div>
